#include <iostream>
#include <windows.h>
#include <string>
#include <fstream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	fstream file;
	string S;
	int i, N, j, m = 0, t;
	file.open("C:\\.vs\\Файлы\\1.txt");
	if (file)
	{
		while ( !file.eof() )
		{
			getline(file, S, '\0');
			for (i = S.find(32) + 1; i <= S.size(); i++)
				file << S[i];
		}
		file.close();
		file.open("C:\\.vs\\Файлы\\1.txt", ios::out);
		for (i = S.find(32) + 1; i <= S.size(); i++)
			file << S[i];
		file.close();
		cout << "Программа выполнена";
	}
	else
		cout << "Файл не открыт";

	return 0;
}
