using namespace std;
 
#include <iostream>
 
int main()  {
 int  N,i,min, max,k,j;
 cout << "N: ";  cin >> N;
 int* A = new int[N];
 cout << "Элементы массива A: " << endl;
 for (i=0; i<N; i++) {
 cout << "A[" << i << "]:";
  cin >> A[i];
 }
 min=A[0]; max=A[0];
 for (i=0; i<N; i++) {
 	if (A[i]>max) {max=A[i]; k=i;}
 	if (A[i]<min) {min=A[i]; j=i;}
 }
 for (i=j+1; i<k; i++) {
 	A[i]=0;
 }
 cout << "Получившаяся матрица: " << endl;
 for (i=0; i<N; i++) {
 	cout << "A[" <<  i << "]: " << A[i] << endl;
 }
 return 0;
}
