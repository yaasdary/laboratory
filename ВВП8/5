#include <iostream>
using namespace std;

int main() {
setlocale(LC_ALL, "Russian");
	int n;
	cout << "n=";
	cin >> n;
	if (n%2==0 && n<0) {
		cout << "Число - отрицательное четное";
	}
	if (n%2==0 && n>0) {
		cout << "Число - положительное четное";
	}
	if (n%2==-1 && n<0) {
		cout << "Число - отрицательное нечетное";
	}
	if (n%2==1 && n>0) { 
	cout << "Число - положительное нечетное";
	}
	if (n==0) { 
	cout << "Число нулевое";
	}
	return 0;
}
