using namespace std; 
 
#include <iostream> 
 
int main()  { 
 int N, i, min, k;
 cout << "N: " << endl;  cin >> N;
 int* A = new int[N]; 
 cout << "Элементы массива: " << endl;
 for (i=0; i<N; i++) { 
  cin >> A[i]; 
 }
 min=A[0];
for (i=2; i<N; i+=2 ) {
	if (A[i]<min ) { min=A[i]; k=i;}
}
cout << "min A[" << k << "]: " << min;
return 0;
}
