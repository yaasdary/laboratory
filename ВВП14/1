using namespace std; 
 
#include <iostream> 
 
int main()  { 
setlocale(LC_ALL, "Russian");
 int N, i, K, L, a=0;
 cout << "N, K, L: " << endl;;  cin >> N >> K >> L;
 int* A = new int[N]; 
 cout << "Элементы массива: " << endl;
 for (i = 0; i < N; i++) { 
  cin >> A[i]; 
 }
 for (i=K; i<=L; i++) {
 	a+=A[i];
 }
 cout << "Среднее арифметическое: " <<  a/(L-K+1) << endl;
 return 0;
}
