using namespace std;
 
#include <iostream>
 
int main()  {
 int  i;
 double N, k;
 cout << "N: ";  cin >> N;
 double* A = new double[N];
 cout << "Элементы массива A: " << endl;
 for (i=1; i<N+1; i++) {
 cout << "A[" << i << "]:";
  cin >> A[i];
 }
 double* B = new double[N];
 k=0;
 for (i=1; i<N+1; i++) {
 	k=k+A[i];
 	B[i]=k/i;
 	 cout << "B[" <<  i << "]:" << B[i] << endl;
 }
 return 0;
}
