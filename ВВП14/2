using namespace std; 
 
#include <iostream> 
 
int main()  { 
 int N, i, a,b;
 cout << "N: " << endl;  cin >> N;
 int* A = new int[N]; 
 cout << "Элементы массива: " << endl;
 for (i=0; i<N; i++) { 
  cin >> A[i]; 
 }
 a=A[1]-A[0];
 for (i=2; i<N; i++) {
   if (A[i]-A[i-1]==a) { b=i+1; }
 }
  if (b==N) {cout << "Массив является арифметической прогрессией с разностью " << a << endl; }
 else { cout << "0" << endl; }
 return 0;
}
