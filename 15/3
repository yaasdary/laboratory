using namespace std;
 
#include <iostream>
 
int main()  {
 int  N,i,k;
 cout << "N: ";  cin >> N;
 int* A = new int[N];
 cout << "Элементы массива A: " << endl;
 for (i=1; i<N+1; i++) {
 cout << "A[" << i << "]:";
  cin >> A[i];
 }
 k=0;
 for (i=1; i<N+1; i++) {
 	if (A[i]%2!=0) { k=A[i]; }
 }
 cout << "Получившаяся матрица: " << endl;
 for (i=1; i<N+1; i++) {
 	if (A[i]%2!=0) { A[i]=A[i]+k; }
 	cout << "A[" <<  i << "]" << A[i] << endl;
 }
 return 0;
}
