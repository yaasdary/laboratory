#include <iostream>
using namespace std;

int main() {
setlocale(LC_ALL, "Russian");
	int x,y;
	cout << "x="; cin >> x;
	cout << "y="; cin >> y;
	if (x>0 && y>0) {
		cout << "Точка расположена в 1 координатном углу";
	}
	if (x<0 && y>0) {
		cout << "Точка расположена во 2 координатном углу";
	}
	if (x<0 && y<0) {
		cout << "Точка расположена в 3 координатном углу";
	}
	if (x>0 && y<0) {
		cout << "Точка расположена в 4 координатном углу";
	}
	return 0;
}
