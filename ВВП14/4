using namespace std; 
 
#include <iostream> 
 
int main()  { 
 int N, i, a, b;
 cout << "N: " << endl;  cin >> N;
 int* A = new int[N]; 
 cout << "Элементы массива: " << endl;
 for (i=0; i<N; i++) { 
  cin >> A[i]; 
 }
 for (i=1; i<(N-1); i++) {
 	if ((A[i]>A[i-1]) && (A[i]>A[i+1]) ) { a=A[i]; b=i;}
 }
 cout << "Local max: " << "A[" <<b << "]=" << a;
 return 0;
}
