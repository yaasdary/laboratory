#include <iostream>
using namespace std;

int main()
{
setlocale(LC_ALL, "Russian");
	double A, B, C, BC, AC,proizv;
  cout << "A, B, C: ";
	cin >> A >> B >> C;
	if (A >= C) {
		AC = A - C;
	}
	else {
		AC = C - A;
	}
	if (B >= C) {
		BC = B - C;
	}
	else {
		BC = C - B;
	}
	proizv = BC * AC;
	cout << "Произведение: " << proizv;
	return 0;
}
