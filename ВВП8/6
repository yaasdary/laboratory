#include <iostream>
using namespace std;

int main() {
setlocale(LC_ALL, "Russian");
	int n;
	cout << "n="; cin >> n;
	if (n%2==0 && n>0 && n<10) {
		cout << "Число однозначное четное";
	}
	if (n%2==1 && n>0 && n<10) {
		cout << "Число однозначное нечетное";
	}
	if (n%2==0 && n>9 && n<100) {
		cout << "Число двузначное четное";
	}
	if (n%2==1 && n>9 && n<100) {
		cout << "Число двузначное нечетное";
	}
	if (n%2==0 && n>99 && n<1000) {
		cout << "Число трехзначное четное";
	}
	if (n%2==1 && n>99 && n<1000) {
		cout << "Число трехзначное нечетное";
	}
	return 0;
}
